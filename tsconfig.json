{
	"compilerOptions": {
		/* Language and Environment */
		"target": "es5",
		"lib": ["ES2015", "DOM"],

		/* Modules */
		"module": "ES2015",
		"moduleResolution": "node",

		/* Emit */
		"sourceMap": false,
		"outDir": "./dist",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Completeness */
		"skipLibCheck": true
	},
	"exclude": [
		"./node_modules/*",
		"./test/*"
	],
	"include": [
		"./src"
	],
}
